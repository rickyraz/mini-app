---
import { gsap } from "gsap";
export interface Props {
  src: string;
  alt: string;
  href: string;
}
const { src, alt, href } = Astro.props;
---

<li class="h-48 shadow-xl rounded-2xl">
  <a href={href}>
    <img
      src={src}
      alt={alt}
      class="object-cover w-full h-full rounded-md"
      style={{ aspectRatio: " 16 / 9" }}
    />
  </a>
</li>
